<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard Admin | Krüger Embalagens</title>

  <!-- Bootstrap CSS + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f4f7ff;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
    }

    .top-bar {
      background-color: #90aafc;
      padding: 1rem;
      text-align: center;
      font-weight: bold;
      color: white;
      font-size: 1.3rem;
    }

    .dashboard-container {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 250px;
      background-color: #6fa8dc;
      padding: 1rem;
      color: white;
    }

    .sidebar h5 {
      margin-bottom: 1.5rem;
    }

    .sidebar .btn {
      width: 100%;
      margin-bottom: 0.8rem;
    }

    .content-area {
      flex: 1;
      padding: 2rem;
      background-color: #eef3ff;
    }

    .pedido-card {
      background-color: white;
      border: 1px solid #ccc;
      padding: 1rem;
      border-radius: 10px;
      margin-bottom: 1rem;
      box-shadow: 0 0 8px rgba(0,0,0,0.05);
    }

    .pedido-card h6 {
      margin-bottom: 0.5rem;
    }

    .pedido-card .btn {
      margin-right: 0.5rem;
    }
  </style>
</head>
<body>

  <div class="top-bar">
    Painel Administrativo - Krüger Embalagens
  </div>

  <div class="dashboard-container">

    <div class="sidebar">
      <h5>Gerenciar</h5>
      <a href="/admin/novo-item" class="btn btn-outline-light"><i class="bi bi-plus-circle"></i> Adicionar Novo Item</a>
      <a href="/admin/editarItens" class="btn btn-outline-light"><i class="bi bi-pencil-square"></i> Editar Itens</a>
      <a href="/admin/taxas" class="btn btn-outline-light"><i class="bi bi-truck"></i> Editar Taxas</a>
      <a href="/admin/pedidos-finalizados" class="btn btn-outline-light"><i class="bi bi-archive"></i> Ver Pedidos Finalizados</a>
    </div>

     <div class="content-area">
  <div class="row" id="listaProdutos">
    <% produtos.forEach(produto => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 produto-item">
        <div class="card card-produto h-100">
          <% if (produto.foto1) { %>
            <img src="/uploads/<%= produto.foto1 %>" class="card-img-top" alt="Foto do produto">
          <% } else { %>
            <img src="/img/sem-foto.png" class="card-img-top" alt="Sem imagem">
          <% } %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><% if(produto.situacao === 'inativo'){ %> <p style="text-decoration: underline;" >(inativo) </p><% } %> <%= produto.nome %></h5>
            <p class="card-text text-muted mb-2">R$ <%= produto.preco.toFixed(2) %></p>
            <a href="/admin/editarItem/<%= produto.id %>" class="btn btn-warning mt-auto">Editar Produto</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
</div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>