<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard Admin | Krüger Embalagens</title>

  <!-- Bootstrap CSS + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f4f7ff;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
    }

    .top-bar {
      background-color: #90aafc;
      padding: 1rem;
      text-align: center;
      font-weight: bold;
      color: white;
      font-size: 1.3rem;
    }

    .dashboard-container {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 250px;
      background-color: #6fa8dc;
      padding: 1rem;
      color: white;
    }

    .sidebar h5 {
      margin-bottom: 1.5rem;
    }

    .sidebar .btn {
      width: 100%;
      margin-bottom: 0.8rem;
    }

    .content-area {
      flex: 1;
      padding: 2rem;
      background-color: #eef3ff;
    }

    .pedido-card {
      background-color: white;
      border: 1px solid #ccc;
      padding: 1rem;
      border-radius: 10px;
      margin-bottom: 1rem;
      box-shadow: 0 0 8px rgba(0,0,0,0.05);
    }

    .pedido-card h6 {
      margin-bottom: 0.5rem;
    }

    .pedido-card .btn {
      margin-right: 0.5rem;
    }
  </style>
</head>
<body>

  <div class="top-bar">
    Painel Administrativo - Krüger Embalagens
  </div>

  <div class="dashboard-container">

    <div class="sidebar">
      <h5>Gerenciar</h5>
      <a href="/admin/novo-item" class="btn btn-outline-light"><i class="bi bi-plus-circle"></i> Adicionar Novo Item</a>
      <a href="/admin/editarItens" class="btn btn-outline-light"><i class="bi bi-pencil-square"></i> Editar Itens</a>
      <a href="/admin/taxas" class="btn btn-outline-light"><i class="bi bi-truck"></i> Editar Taxas</a>
      <a href="/admin/pedidos-finalizados" class="btn btn-outline-light"><i class="bi bi-archive"></i> Ver Pedidos Finalizados</a>
    </div>

    <div class="content-area">
      <h4 class="mb-4">Pedidos em Processamento</h4>

      <% pedidosProcessando.forEach(pedido => { %>
      <div class="pedido-card">
        <h6>Pedido #<%= pedido.id %> - <%= pedido.Usuario.nome %></h6>
        <p><strong>Valor Total:</strong> <%= pedido.total %> <strong>Bairro de Entrega:</strong> <%= pedido.endereco.bairro %> </p>
        <% pedido.itens.forEach(item => { %>
          <% if (item.produto) { %>
              <p><%= item.produto.nome %> <strong>Quantidade: </strong> <%= item.quantidade %></p>
          <% } else { %>
            <p><em>Produto não disponível</em></p>
          <% } %>
        <% }) %>
        <button class="btn btn-success"><i class="bi bi-check-circle"></i> Aceitar</button>
        <button class="btn btn-danger"><i class="bi bi-x-circle"></i> Recusar</button>
      </div>
      <% }) %>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>